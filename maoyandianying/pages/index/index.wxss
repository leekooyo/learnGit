/* pages/index/index.wxss */
swiper{
  height: 500rpx; /*图片的高度*2*/
}
.swiper-box image{
  width: 100%;
}

.tab{
  display: flex; 
  width: 100%; 
  height: 50px; 
  line-height: 50px; 
  border-bottom: 1px solid #e6e6e6; 
}
.tab view{
  flex: 1; 
  text-align: center;
}
.active{
  color: #E54847;
  border-bottom: 2px solid #E54847;
}

.c-a-film{
  width: 100%;
  padding: 10px; 
  
}
.title{
  color: #333;
  font-size: 14px; 
  margin-bottom: 10px;
}

.scroll-box{
  white-space: nowrap;
  width: 100%;
}
.scroll-item{
  display: inline-block;
  margin-right: 10px;
}

.img-box{
  width: 85px;
  height: 120px;
  overflow: hidden;
}
.scroll-item image{
  width: 85px;
}
.film-name{
  font-size: 13px;
  width: 85px;
  color: #222;
  margin: 3px 0; 
 
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.main{
  border-top: 10px solid #f6f6f6;
}

.film-main-box{
  display: flex;
  padding-top: 10px;
  padding-left: 10px;
  padding-bottom: 10px;
}
.film-left{
  flex: 1; 
}
.film-right{
  flex: 4; 
  border-bottom: 1px solid #F0F0F0;
  display: flex;
}
.right-l{
  flex: 2;
}
.right-r{
  flex: 1;
}
.film-main-box image{
  width: 64px;
}
.nm{
  font-size: 17px;
  font-weight: 700;
}
.mk{
  margin-top: 5px; 
  font-size: 13px;
  color: #666;
}
.mk text{
  font-size: 16px;
  color: #faaf00;
}
.desc{
  font-size: 13px;
  margin-top: 5px;
  color: #666;
}
.showInfo{
  margin-top: 5px;
  font-size: 13px;
  color: #666;
}
.buy{
  background: rgb(240, 61, 55); 
  color: white;
  width: 58px !important; 
  height: 28px;
  font-size: 13px !important; 
  font-weight: 400 !important; 
  padding: 0 !important; 
  line-height: 28px; 
  border-radius: 80px;
}