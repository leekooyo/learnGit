/* pages/detail/detail.wxss */
page{
  background: #1E324A;
  color: #fff;
  padding: 10px;
  box-sizing: border-box;
}

.top{
  display: flex;
}
.t-l{
  flex: 1;
}
.t-l image{
  width: 120px;
}

.t-r{
  flex: 2;
}
.nm{
  font-size: 22px;
  font-weight: 700; /*加粗*/
  margin-bottom: 15px;
}
.desc{
  font-size:12px;
  color: #A1AAB4;
  margin:5px 0;
}
.btn-box{
  display: flex;
}
.btn-box button{
  width: 120px !important;
  margin: 0 !important;
  font-size: 14px;
  font-weight: 500;
  background-color: #6D7A89;
  color: #fff;
}
.btn-box button:first-of-type{
  margin-right: 10px !important;
}
.film-desc{
  margin-top: 30px;
}

.film-desc-content{
  margin-top: 15px;
  letter-spacing: 1px;  /*字与字之间的间距*/
}
.person{
  margin-top: 30px;
}

.scroll-box{
  margin-top: 15px;
  white-space: nowrap;
  width: 100%;
  text-align: center;
}
.scroll-item{
  display: inline-block;
  margin-right: 10px;
}


.videoRecommend{
  width: 150px;
  overflow: hidden;
}
.img-box{
  width: 85px;
  height: 120px;
  overflow: hidden;
}
.scroll-item image{
  width: 85px;
}
.videoRecommend image{
  width: 150px;
}
.cast-m-name{
  font-size: 13px;
  color: #fff;
}
.cast-m-role{
  font-size: 13px;
  color: #76828C;
}
.comment{
  background-color: #fff;
  color: #000;
  border-radius: 10px 10px 0 0;
}
.comment-content{
  margin-top: 20px;
}
.level{
  font-size: 12px;
  border: 1px solid #ccc;
  padding: 2px 10px;
  border-radius: 80px;
  margin-left: 18px;
}
.content-main{
  margin-top: 10px;
}
.footer{
  margin-top: 10px;
  font-size: 13px;
  border-bottom: 1px solid #efefef;
  padding-bottom: 30px;
}
.footer text{
  background: #EEF1F6;
  color: #7B7CBC;
  padding: 2px 10px;
  border-radius: 80px;
  margin-left: 10px;
}